<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/linlayGeneral"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:animateLayoutChanges="true"
        tools:context="edu.chapman.cpsc356.tipcalculator.MainActivity">

        <TextView
            android:id="@+id/tvEnterPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:text="@string/price_of_the_service"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etPrice"
            android:textSize="20sp"
            android:inputType="numberDecimal"
            android:textColor="@android:color/black"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvRating"
            android:text="@string/quality_of_the_service_on_a_scale_n_of_1_terrible_to_10_excellent"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/linlayRow1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn1"
                android:text="@string/_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#F20300"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="6dp"/>
            <Button
                android:id="@+id/btn2"
                android:text="@string/_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#F22900"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="6dp"/>
            <Button
                android:id="@+id/btn3"
                android:text="@string/_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#EE4400"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="6dp"/>
            <Button
                android:id="@+id/btn4"
                android:text="@string/_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#FF6600"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="6dp"/>
            <Button
                android:id="@+id/btn5"
                android:text="@string/_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#FF9900"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="6dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linlayRow2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn6"
                android:text="@string/_6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#FFD937"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"/>
            <Button
                android:id="@+id/btn7"
                android:text="@string/_7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#E8D80E"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"/>
            <Button
                android:id="@+id/btn8"
                android:text="@string/_8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#A2AD0F"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"/>
            <Button
                android:id="@+id/btn9"
                android:text="@string/_9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#8D970D"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"/>
            <Button
                android:id="@+id/btn10"
                android:text="@string/_10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#646B09"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvPercent"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tvTip"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tvTotal"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>